<?xml version="1.0"?>
<robot name="drone_target">
  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <mass value="0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>

  <!-- Disk (modeled as a thin cylinder) -->
  <link name="disk_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0003" ixy="0" ixz="0" iyy="0.0003" iyz="0" izz="0.0011"/>
    </inertial>
    <visual>
      <origin xyz="1.8 1.8 1.0"/>
      <geometry>
        <cylinder radius="0.15" length="0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="1.8 1.8 1.0"/>
      <geometry>
        <cylinder radius="0.15" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Fixed Joint to Base Link -->
  <joint name="disk_joint" type="fixed">
    <parent link="base_link"/>
    <child link="disk_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>